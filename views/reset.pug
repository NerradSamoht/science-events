extends layout

block content
	.inner
		form(class="form" method="POST")
			h1 Reset Your Password
			
			label(class="label" for="email") Enter your email address:
			input(class="input" type="email" name="email" id="email" autocomplete="username" required autofocus)

			label(class="label" for="password") Enter a new password:
			input(class="input" type="password" name="password" id="password" autocomplete="new-password" required)

			label(class="label" for="password-confirm") Confirm your new password:
			input(class="input" type="password" name="password-confirm" autocomplete="new-password" required)

			input(class="input button" type="submit" value="Reset Password")
