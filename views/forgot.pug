extends layout

block content
	.inner
		form(class="form" method="POST")
			h1 Reset your password

			label(class="form__label" for="email") Enter your email address:
			input(class="form__input" type="email" name="email" id="email" required autofocus)
			p.tip A password reset link will be emailed to you.

			input(class="form_input button" type="submit" value="Reset password")
			
		p: a(href="/login") Return to login
